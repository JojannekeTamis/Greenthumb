<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6 form-group">
      <%= simple_form_for(product) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit %>
      <% end %>
      <%= cl_image_tag @product.photo, height: 300, width: 400, crop: :fill %>
    </div>
  </div>
</div>
