<div class="booking-item">
  <div class="booking-item-thumb"><%= cl_image_tag allotment.garden.photo, class: "avatar-large" %></div>
  <div class="booking-item-infos">
    <div><%= allotment.garden.address %></div>
    <div><%= allotment.garden.city %></div>
  </div>
  <div>
    <div class="booking-item-owner">
      <div><%= cl_image_tag allotment.garden.owner.photo, class: "avatar-small" %></div>
      <div><%= allotment.garden.owner.fullname %></div>
    </div>
      <div><%= allotment.message %></div>
  </div>
  <div class="booking-item-side">
    <div>
      <div><%= allotment.start_day %></div>
      <div><%= allotment.end_day %></div>
    </div>
    <div class="<%= allotment.request_status %>"><%= allotment.request_status %></div>
    <div><% if allotment.request_status == "pending" %>
      <%= link_to "cancel", cancel_user_allotment_path(allotment), class: "btn btn-success btn-sm", method: :patch %>
      <% elsif allotment.request_status == "accepted" %>
      <%= link_to "write review", new_user_allotment_garden_review_path(allotment), class: "btn btn-success btn-sm" %>
      <% end %>
    </div>
  </div>
</div>
