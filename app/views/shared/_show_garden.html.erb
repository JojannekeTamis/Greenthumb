<div class="garden-photo">
  <% garden.photos.each do |photo| %>
    <%= link_to photo.url, class: "swipebox" do %>
      <%= cl_image_tag photo, class: "garden-image" %>
    <% end %>
  <% end %>
</div>

<div id="container-garden-details">
  <div class="avatar-garden">
    <%= link_to image_tag(garden.owner.photo, class: "avatar-large"), user_path(garden.owner), { class: "avatar-link card-user" } %>
  </div>


<div class="text-garden">
  <h2> <%= garden.title %></h2>
  <p> <%= garden.address %></p>
  <br>
</div>

<% if user_signed_in? && current_user.garden %>
  <div class="buttons-garden"><%= link_to "Edit", edit_owner_garden_path, class:"btn btn-success" %>
  </div>
  <br>
  <% if garden.allotments.empty? %>
    <div class="buttons-garden"><%= link_to "Delete", owner_garden_path, method: :delete, class:"btn btn-success" %></div>
  <% end %>

  <% else %>
  <div class="buttons-garden"><%= link_to "Book this Garden", new_garden_allotment_path(@garden), {class: "btn btn-success" } %></div>
  <% end %>
</div>

<div class="wrapper-white-about">
<div id="container-garden-details">
  <div class="garden-description">
    <h4>About this garden</h4>
    <br>
    <p> <%= garden.description %></p>
  </div>
</div>
</div>

<div class="review-container">
  <div class="row">
    <% garden.garden_reviews.each do |review| %>
    <div class="col-xs-12 col-sm-6" >
      <div class="review-cards" >
        <div class="circle">
          <%= cl_image_tag review.user.photo, class: "avatar-medium", id: "avatar-review" %>
        </div>
        <div class="review-name">
          <p> <%= review.user.fullname %></p>
        </div>
        <div class="review-text">
          <p><%= review.description %></p>
        </div>
        <div class="carrots">
          <% review.stars.times do %>
          <%= image_tag "carrot_full.png", class: "small-icon"%>
          <% end %>
          <% (5 - review.stars).times do %>
          <%= image_tag "carrot_empty",  class: "small-icon"%>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

