<h1> Gardens: </h1>
</div>



 <div class="container-gar">
    <div class="row">
      <% @gardens.each do |garden| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background: url('<%= garden.photo %>');">
          <div class="card-description">
            <h2><%= garden.title %></h2>
          </div>
          <div>
            <%= link_to image_tag(garden.owner.photo, class: " avatar "), user_path(garden.owner), { class: "avatar-link card-user" } %>
          </div>
          <%= link_to "", garden_path(garden), { class: "card-link" } %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
