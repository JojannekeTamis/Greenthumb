<div class="counters wrapper-grey padded" >
    <div class="col-sm-offset-3 col-sm-3">
      <%= link_to gardens_path do %>
      <div class="count-card">
        <p> See all our <span class="count"> <%= Garden.count %></span> gardens. </p>
      </div>
      <% end %>
    </div>
    <div class="col-sm-3">
      <%= link_to new_user_registration_path, { "data-toggle": "modal", "data-target": "#sign-up" } do %>
      <div class="count-card">
        <p> Become one of our <span class="count"><%= User.count %></span> pioneers</p>
      </div>
      <% end %>
    </div>
</div>


<div class="container" style="padding-top: 80px; padding-bottom: 50px">
  <div class="row">
    <% @gardens[0..1].each do |garden|%>
    <% if garden.available == true %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background: url('<%= garden.photo %>');">
        <div class="card-hover">
          <h2><%= garden.title %></h2>
          <p><%= truncate(garden.description, length: 300) %></p>
          <div id="garden-address">
           <p ><%= garden.address %></p>
         </div>
       </div>
       <%= link_to "", garden_path(garden), { class: "card-link" } %>
     </div>
   </div>
   <% end %>
   <% end %>
   <div class="col-xs-12 col-sm-4">
    <div class="card" style="background: url(<%= image_path 'afb2.jpg' %>);">
      <div class="card-hover">
        <h2>Your Garden</h2>
        <p> Share your garden</p>
      </div>
    </div>
  </div>
</div>
<div class=" how-to text-center"><p> Want to share some space in your garden? <%= link_to "Add your garden", new_owner_garden_path, {class: "link"} %> </p></div>
</div>


