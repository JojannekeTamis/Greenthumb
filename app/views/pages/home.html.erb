 <div class="container" style="padding-top: 20px">
  <div class="row">
    <% @gardens[0..1].each do |garden|%>
      <% if garden.available == true %>
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background: url('<%= garden.photo %>');">
              <div class="card-hover">
                <h2><%= garden.title %></h2>
                 <p><%= garden.description %></p>
                 <div id="garden-address">
                 <p ><%= garden.address %></p>
                 </div>
              </div>
              <%= link_to "", garden_path(garden), { class: "card-link" } %>
            </div>
          </div>
        <% end %>
      <% end %>
      <div class="col-xs-12 col-sm-4">
            <div class="card" style="background: url(<%= image_path 'afb2.jpg' %>);">
              <div class="card-hover">
                <h2>Your Garden</h2>
                 <p> Share your garden</p>
              </div>
            </div>
          </div>
    </div>
    <div class="text-center"><p> What to share some space in your garden? <%= link_to "Add your garden", new_owner_garden_path, {class: "link"} %> </p></div>
  </div>


